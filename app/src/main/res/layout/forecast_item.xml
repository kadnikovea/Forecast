<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/itemImage"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <!--tools:src="@mipmap/ic_launcher_round"-->

    <TextView
            android:id="@+id/itemTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            tools:text="Температура - 16"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/itemDate"
            android:layout_marginStart="8dp" android:layout_marginEnd="133dp"
            app:layout_constraintStart_toEndOf="@+id/itemImage"/>

    <TextView
            android:id="@+id/itemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="дата"

            android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toEndOf="@+id/itemImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>